{
   "autoupdate": {
      "type" : "checkbox",
      "default" : true,
      "description" : "Autoupdate. Update scripts list when the applet is opened."
   },
   "directory": {
      "type" : "filechooser",
      "default" : "",
      "description" : "Scripts directory",
      "select-dir" : true
   },
   "head_title" : {
      "type" : "header",
      "description" : "Title"
   },
   "showtitle": {
      "type" : "checkbox",
      "default" : true,
      "description" : "Show title"
   },
   "paneltitle": {
      "type" : "entry",
      "default" : "Scripts",
      "description" : "Title"
   },
   "head_icon" : {
      "type" : "header",
      "description" : "Icon"
   },
   "customicon": {
      "type" : "checkbox",
      "default" : false,
      "description" : "Custom icon"
   },
   "icon": {
      "type" : "iconfilechooser",
      "default" : "",
      "description" : "Icon (empty to hide the icon)",
      "dependency": "customicon"
   }
}
