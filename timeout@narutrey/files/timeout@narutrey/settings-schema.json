{
    "enable": {
        "type": "checkbox",
        "default": true,
        "description": "Enable"
    },
    "Time_settings_header": {
        "type": "header",
        "description": "Time settings"
    },
    "time_work": {
        "type": "spinbutton",
        "indent": true,
        "default": 30,
        "min": 1,
        "max": 999,
        "units": "minutes",
        "step": 1,
        "description": "Time between breaks"
    },
    "time_break": {
        "type": "spinbutton",
        "indent": true,
        "default": 5,
        "min": 1,
        "max": 999,
        "units": "minutes",
        "step": 1,
        "description": "Break length"
    },
    "time_postpone": {
        "type": "spinbutton",
        "indent": true,
        "default": 2,
        "min": 1,
        "max": 999,
        "units": "minutes",
        "step": 1,
        "description": "Postpone length"
    },
    "behaviour_separator": {
        "type": "separator"
    },
    "behaviour": {
        "type": "header",
        "description": "Behaviour"
    },
    "allow_postpone": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Allow postpone"
    },
    "resume_auto": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Resume automatically"
    },
    "appearance_separator": {
        "type": "separator"
    },
    "appearance": {
        "type": "header",
        "description": "Appearance"
    },
    "display_mode": {
        "type": "radiogroup",
        "indent": true,
        "default": "all",
        "options" : {
            "Only Icon" : "only_icon",
            "Only Label" : "only_label",
            "Icon and Label" : "all"
        },
        "description": "Display panel"
    },
    "display_seconds": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Display seconds"
    }
}
