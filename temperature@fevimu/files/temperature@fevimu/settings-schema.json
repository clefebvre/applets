{
    "use-fahrenheit": {
        "type" : "switch",
        "default" : false,
        "description" : "Show temperature in Fahrenheit"
    },
    "only-integer-part": {
        "type" : "switch",
        "default" : false,
        "description" : "Use integer values for temperature"
    },
    "interval": {
        "type": "spinbutton",
        "default": 5000,
        "min": 2000,
        "max": 30000,
        "step": 1,
        "units": "ms",
        "description": "Update interval"
    },
    "change-color": {
        "type" : "switch",
        "default" : true,
        "description" : "Change color when the temperature becomes High or Critical"
    }
}
