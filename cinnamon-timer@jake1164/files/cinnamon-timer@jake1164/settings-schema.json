{
    "layout1": {
        "type": "layout",
        "pages": ["page1", "page2", "page3", "page4"],
        "page1": {
            "type": "page",
            "title": "General",
            "sections": ["section1"]
        }, 
        "page2": {
            "type": "page",
            "title": "Sounds",
            "sections": ["section2"]
        },         
        "page3": {
            "type": "page",
            "title": "Preset Times",
            "sections": ["section3"]
        },
        "page4": {
            "type": "page",
            "title": "Slider Intervals",
            "sections": ["section4"]
        },        
        "section1": {
            "type": "section",
            "title": "General Settings",
            "keys": [
                "confirm-prompt-enable", 
                "message-prompt-enable", 
                "display-message", 
                "display-menu-enable", 
                "time_display_enable"
            ]
        },
        "section2": {
            "type": "section",
            "title": "Sound Settings",
            "keys": ["sound-prompt-enable", "sound-file"]
        },
        "section3": {
            "type": "section",
            "title": "Preset Times",
            "keys": [ "preset_time"]
        },        
        "section4": {
            "type": "section",
            "title": "Slider Intervals",
            "keys": [ "slider_intervals"]
        }                
    },
    "confirm-prompt-enable" : {
        "type" : "checkbox",
        "default" : true,
        "description" : "Check this to place a prompt on the window when time has elapsed.",
        "tooltip" : "Check this to place a prompt on the window when time has elapsed"
    },
    "message-prompt-enable" : {
        "type" : "checkbox",
        "default" : true,
        "description" : "Display a notification when time has elapsed",
        "tooltip" : "Display a notification when time has elapsed"
    },
    "display-message" : {
        "type": "entry",
        "default": "Time up!",
        "description": "Global message displayed in notification windows unless defined in preset time.",
        "tooltip": "Global message displayed in notification windows unless defined in preset time."
    },
    "sound-prompt-enable" : {
        "type" : "checkbox",
        "default" : true,
        "description" : "Play a sound when time is elapsed",
        "tooltip" : "Play a sound when time is elapsed"
    },
    "sound-file": {
        "type": "soundfilechooser",
        "default": "/usr/share/sounds/freedesktop/stereo/alarm-clock-elapsed.oga",
        "dependency": "sound-prompt-enable",
        "description": "Full path and filename of alert sound file",
        "tooltip": "Must have Sox installed. Most sound file types supported"
    },
    "display-menu-enable" : {
        "type" : "checkbox",
        "default" : false,
        "description" : "Show the timer menu when time is elapsed",
        "tooltip" : "Show the timer menu when time is elapsed"
    },
    "time_display_enable" : {
        "type" : "checkbox",
        "default" : true,
        "description" : "Display remaining time in panel",
        "tooltip" : "Display remaining time in panel"
    },
    "alarm_end" : {
        "type" : "generic",
        "default" : "",
        "description" : "Do not change, the time the alarm is set to expire",
        "tooltip" : "Do not change, the time the alarm is set to expire"
    },
    "alarm_start" : {
        "type" : "generic",
        "default" : "",
        "description" : "Do not change, the time the alarm is set to expire",
        "tooltip" : "Do not change, the time the alarm is set to expire"
    },
    "message" : {
        "type" : "generic",
        "default" : "",
        "description" : "Do not change, message being displayed when the current timer expires",
        "tooltip" : "Do not change, message being displayed when the current timer expires"
    },    
    "slider_intervals" : {
        "type" : "list",
        "description" : "Slider Intervals",
        "columns" : [
            {"id": "min", "title": "Minimum", "type": "integer", "min": 0, "max":86400},
            {"id": "max", "title": "Maximum", "type": "integer", "min": 0, "max":86400},
            {"id": "step", "title": "Step", "type": "integer", "min": 1, "max": 3600}
        ],
        "default": [
            {"min": 0, "max": 300, "step": 15},
            {"min": 300, "max": 1800, "step": 60},
            {"min": 1800, "max": 10800, "step": 600},
            {"min": 10800, "max": 86400, "step": 3600}
        ]
    },
    "preset_time": {
        "type" : "list",
        "description" : "Preset Times",
        "columns" : [
            {"id": "time", "title": "Time", "type": "integer", "min": 0, "max":86400, "default": 1},
            {"id": "unit", "title": "Unit (MUST BE 'seconds', 'minutes', 'hours')", "type" : "string", "default": "seconds"},
            {"id": "label", "title": "Label", "type": "string"},
            {"id": "message", "title": "Custom Message (overrides global message)", "type": "string"}
        ],
        "default": [
            {"time": 5, "unit": "hours"},           
            {"time": 4, "unit": "hours"},
            {"time": 2, "unit": "hours"},            
            {"time": 3, "unit": "hours"},             
            {"time": 90, "unit": "minutes"},
            {"time": 1, "unit": "hours"},
            {"time": 45, "unit": "minutes"},
            {"time": 30, "unit": "minutes"},
            {"time": 20, "unit": "minutes"},
            {"time": 15, "unit": "minutes"},
            {"time": 10, "unit": "minutes"},
            {"time": 5, "unit": "minutes"},
            {"time": 3, "unit": "minutes"},
            {"time": 2, "unit": "minutes"},
            {"time": 1, "unit": "minutes"},
            {"time": 30, "unit": "seconds"}
        ]        
    }
}
