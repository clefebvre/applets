	"show-icon": {
		"type": "checkbox",
		"default": true,
		"description": "Show icon"
	},

	"show-name": {
		"type": "checkbox",
		"default": false,
		"description": "Show currency name"
	},


	"graph-On": {
		"type": "checkbox",
		"default": false,
		"description": "Show currency history on graph"
	},

	"graphDuration": {
		"type": "spinbutton",
		"default": 30,
		"min": 1,
		"max": 2000,
		"step": 1,
		"description": "Duration history (in days)"
	},

	"graphColor": {
		"type": "colorchooser",
		"default": "#64cbff",
		"description": "Color"
	},


	"alert-On": {
		"type": "checkbox",
		"default": false,
		"description": "Enable alerts"
	},

	"alertAbove": {
		"type": "entry",
		"default": "",
		"description": "Maximum value",
		"tooltip": "Alert is triggered when the current value is higher than this value"
	},

	"alertBelow": {
		"type": "entry",
		"default": "",
		"description": "Minimum value",
		"tooltip": "Alert is triggered when the current value is lower than this value"
	},

	"alertType": {
		"type": "radiogroup",
		"default": "percentage",
		"description": "Unit",
		"options": {
			"Percentages": "percentage",
			"Money": "money"
		}
	}

