{
	"layout": {
		"type": "layout",
		"pages": [
			"general",
			"graph",
			"alert"
		],

		"general": {
			"type": "page",
			"title": "General",
			"sections": [
				"cfgFiat",
				"selectCoin",
				"cfgCoin",
				"cfgDisplay"
			]
		},

		"graph": {
			"type": "page",
			"title": "Graph",
			"sections": [
				"cfgGraph",
				"graphOption"
			]
		},

		"alert": {
			"type": "page",
			"title": "Alerts",
			"sections": [
				"cfgAlerts",
				"alertOption"
			]
		},

		"cfgFiat": {
			"type": "section",
			"title": "",
			"keys": ["country"]
		},

		"selectCoin": {
			"type": "section",
			"title": "",
			"keys": ["select-coin"]
		},

		"cfgCoin": {
			"type": "section",
			"title": "Cryptocurrency options",
			"dependency": "select-coin",
			"keys": [
				"apiKey",
				"website",
				"coin",
				"ApiInterval"
			]
		},

		"cfgDisplay": {
			"type": "section",
			"title": "Display options",
			"keys": [
				"currency",
				"display",
				"show-icon",
				"show-name"
			]
		},

		"cfgGraph": {
			"type": "section",
			"title": "",
			"keys": ["graph-On"]
		},

		"graphOption": {
			"type": "section",
			"title": "Graph options",
			"dependency": "graph-On",
			"keys": [
				"graphDuration",
				"graphColor"
			]
		},

		"cfgAlerts": {
			"type": "section",
			"title": "",
			"keys": ["alert-On"]
		},

		"alertOption": {
			"type": "section",
			"title": "Alerts options",
			"dependency": "alert-On",
			"keys": [
				"alertAbove",
				"alertBelow",
				"alertType"
			]
		}

	},


	"country": {
		"type": "radiogroup",
		"default": "EU",
		"description": "Choosing a server for fiat currency",
		"tooltip": "Affects the load data fiat currency quotes",
		"options": {
			"European Union": "EU",
			"Russian Federation": "RU"
		}
	},

	"select-coin": {
		"type": "checkbox",
		"default": false,
		"description": "Display cryptocurrency quotes instead of fiat currency"
	},

	"apiKey": {
		"type": "entry",
		"default": "",
		"description": "Your CoinMarketCap API Key",
		"tooltip": "If you don`t have one you can get it for free at https://pro.coinmarketcap.com"
	},

	"website": {
		"type": "button",
		"description": "Go to CoinMarketCap website",
		"callback": "_visit_website",
		"tooltip": "Click this button to visit the website",
		"indent": true
	},

